<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:fadingEdge="horizontal|vertical">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvName"
        tools:text="_shreya_s" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:text="This is my tweet!!" />

    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvBody"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/tvScreenName"
        tools:text="created at" />

    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="156dp"
        android:layout_height="93dp"
        android:layout_below="@+id/tvBody"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textStyle="bold"
        tools:text="Shreya Shekhar" />

    <Button
        android:id="@+id/btReply"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/vector_compose_dm_shortcut" />

    <Button
        android:id="@+id/btRetweet"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_below="@+id/ivMedia"
        android:layout_marginStart="100dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/btReply"
        android:background="@drawable/ic_vector_retweet" />

    <Button
        android:id="@+id/btLike"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="58dp"
        android:layout_toEndOf="@+id/btRetweet"
        android:background="@drawable/ic_vector_heart_stroke" />

</RelativeLayout>